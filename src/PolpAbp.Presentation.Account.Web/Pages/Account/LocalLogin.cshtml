@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.Account.Localization
@using Volo.Abp.Account.Settings
@using Volo.Abp.AspNetCore.Mvc.UI.MultiTenancy.Localization
@using Volo.Abp.Settings
@using AspNetCore.ReCaptcha
@using System.Web
@model PolpAbp.Presentation.Account.Web.Pages.Account.LocalLoginModel
@inject IHtmlLocalizer<AccountResource> L
@{
    ViewBag.Title = "Login (Username/Password)";
    ViewBag.Description = "Log in to your account using your username and password.";
    ViewBag.Keywords = "login, sign in, account, username, email, password";
    ViewBag.ShowResetButton = true;

    var reActivationLink = Url.Page("./ResendActivationLink", new
    {
        UserName = Model.Input.IsUsingUserName ? string.Empty : Model.Input.UserNameOrEmailAddress,
        EmailAddress = Model.Input.IsUsingUserName ? Model.Input.UserNameOrEmailAddress : string.Empty
    });

    var forgotPwdLink = Url.Page("./ForgotPassword", new
    {
        UserName = Model.Input.IsUsingUserName ? string.Empty : Model.Input.UserNameOrEmailAddress,
        EmailAddress = Model.Input.IsUsingUserName ? Model.Input.UserNameOrEmailAddress : string.Empty,
        returnUrl = Model.ReturnUrl,
        returnUrlHash = Model.ReturnUrlHash
    });
}

<h4 class="mb-2 fw-semibold">
    Sign In with Password
</h4>
<div data-bind="visible: hasNoUserOptions" class="mb-3">
    <a href="@Url.Page("./Login")">
        <i class="fas fa-arrow-left me-1"></i>
        Back
    </a>
</div>

<p>
    Welcome back!
    Enter your password to sign in.
</p>

@if (Model.ShowActivationLink)
{
    <div class="alert alert-warning">
        To keep things secure,
        we need you to activate your account using the link in the welcome email we sent you. Didn't see it? No worries! We can send you a new activation email right away.
    </div>

    <p>
        Click <a href="@reActivationLink">here</a> to request a new activation email.
    </p>

    <p>
        Once you've activated your account, you can come back here and sign in!
    </p>
}

<form method="post">

    <input asp-for="Input.IsUsingUserName" type="hidden" autocomplete="off" />

    <div class="mb-3">
        <label for="Input_UserNameOrEmailAddress" class="form-label">
            <i class="fas fa-user"></i>
        </label>
        <input asp-for="Input.UserNameOrEmailAddress" readonly class="form-control-plaintext form-control">
    </div>

    <div class="mb-3" id="password-wrapper">
        <label asp-for="Input.Password" class="form-label"></label>
        <div class="input-group">
            <input asp-for="Input.Password" class="form-control" data-auto-focus="true" autocomplete="current-password" />
            <button type="button" class="toggle-password btn btn-outline-secondary">
                <i class="toggle-icon fa fa-eye"></i>
            </button>
        </div>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <abp-row class="mb-3">
        <abp-column>
            <abp-input asp-for="Input.RememberMe" />
        </abp-column>
        <abp-column class="text-end">
            <a href="@forgotPwdLink">@L["ForgotPassword"]</a>
        </abp-column>
    </abp-row>

    @if (Model.IsRecaptchaEnabled)
    {
        <div class="mb-3">
            @Html.ReCaptcha()
        </div>
    }

    <div class="d-grid gap-2">
        <abp-button type="submit" button-type="Primary" name="Action" value="Input">
            @L["Continue"]
            <span class="spinner-box"></span>
        </abp-button>
        <a abp-button="Secondary" asp-page="/Account/Login">
            Cancel
        </a>
    </div>
</form>

<!-- todo: Add a condition -->
<div class="d-flex flex-column align-items-start mt-5 mb-3">
    <h6>Helpful links</h6>
    <ul>
        <li>
            <a class="btn btn-link fst-italic" href="@reActivationLink">@L["ResendActivationLink"]</a>
        </li>
    </ul>
</div>