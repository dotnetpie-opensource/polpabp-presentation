@page "/account/forgot-password"
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.Account.Localization
@using Volo.Abp.Account.Settings
@using Volo.Abp.AspNetCore.Mvc.UI.MultiTenancy.Localization
@using Volo.Abp.Settings
@using AspNetCore.ReCaptcha
@model PolpAbp.Presentation.Account.Web.Pages.Account.ForgotPasswordModel
@inject IHtmlLocalizer<AccountResource> L

@{
    ViewBag.Title = "Forgot Password";
    ViewBag.Description = "Forgot your password? No problem! We can help you reset it.";
    ViewBag.Keywords = "forgot password,reset password,email address,email";
}

<h1 class="mb-1 fs-3">
    Retrieve Your Password
</h1>
<div class="mb-4">
    <a href="@Url.Page("/Account/LocalLogin")">
        <i class="fas fa-chevron-left me-1"></i>Back
    </a>
</div>

<p>
    No problem! Enter the email address associated with your account and we'll send you instructions to reset your password.
</p>

<form method="post">

    <abp-input asp-for="Input.EmailAddress" auto-focus="true" autocomplete="email" />

    <div class="d-grid gap-2">
        <abp-button type="submit" button-type="Primary" name="Action" value="Input" class="mt-3">
            Send Password Reset Email
            <span class="spinner-box"></span>
        </abp-button>
    </div>
</form>

