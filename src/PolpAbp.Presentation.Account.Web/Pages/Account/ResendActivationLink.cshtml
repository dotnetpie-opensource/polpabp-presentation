@page "/account/resend-activation"
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.Account.Localization
@using Volo.Abp.Account.Settings
@using Volo.Abp.AspNetCore.Mvc.UI.MultiTenancy.Localization
@using Volo.Abp.Settings
@using AspNetCore.ReCaptcha
@model PolpAbp.Presentation.Account.Web.Pages.Account.ResendActivationLinkModel
@inject IHtmlLocalizer<AccountResource> L
@{
    ViewBag.Title = "Request Account Activation Link Again";
    ViewBag.Description = "Need to activate your account?";
    ViewBag.Keywords = "request account activation link,account activation link,activate account";
}

<h1 class="mb-4 fs-3">
    Need a New Activation Email?
</h1>

<p>
    We noticed you might be having trouble activating your account.
    No worries! Enter the email address you used to register below and we'll send you a fresh activation link.
</p>

<form method="post">

    <abp-input asp-for="Input.EmailAddress" auto-focus="true" autocomplete="email" />

    <div class="d-grid gap-2">
        <abp-button type="submit" button-type="Primary" name="Action" value="Input" class="mt-3">
            Send Activation Email
            <span class="spinner-box"></span>
        </abp-button>
    </div>
</form>
